#include<iostream>
using namespace std;
int main()
{
    int j,i;
    int a[]={-1,2,-3,3,-2};
    int n=sizeof(a)/sizeof(a[0]);
    for(i=0;i<n;i++)
    {
        for(j=i+1;j<=n-1;j++)
        {
            if(a[i]==-a[j])
            {
               cout<<a[i]<<" ";
               cout<<a[j]<<" "<<endl;
            }
        }
    }
}
